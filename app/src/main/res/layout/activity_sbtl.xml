<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    tools:context="com.rdypda.view.activity.SbtlActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        app:title=""
        android:id="@+id/toolbar"></android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|left"
                            android:id="@+id/sp_title"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/sbbh_ed"
                            android:textSize="15dp"
                            android:hint="请输入设备编号"/>
                        <com.rdypda.view.widget.PowerButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_green"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@android:color/white"
                            android:id="@+id/sb_sure_btn"
                            android:text="确定"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:text="物料条码："
                            android:gravity="left|center_vertical"/>
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/wltm_ed"
                            android:textSize="15dp"
                            android:hint="请输入物料条码"/>
                        <com.rdypda.view.widget.PowerButton
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_green"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tm_sure_btn"
                            android:text="确定"/>
                    </LinearLayout>
                </LinearLayout>
                <RadioGroup
                    android:layout_marginLeft="10dp"
                    android:layout_width="40dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <RadioButton
                        android:checked="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:id="@+id/sb_radio"/>
                    <RadioButton
                        android:layout_marginTop="10dp"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:id="@+id/tm_radio"/>
                </RadioGroup>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="原料规格"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="设备编号"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="总加料数"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="预计余数"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="400dp"
                        android:scrollbars="vertical"
                        android:layout_height="match_parent"
                        android:id="@+id/tl_list"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="300dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="条码编号"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="数量"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="原料规格"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="加料时间"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_gravity="center_horizontal"
                                android:text="作业人员"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="530dp"
                        android:scrollbars="vertical"
                        android:layout_height="match_parent"
                        android:id="@+id/scaned_list"></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
