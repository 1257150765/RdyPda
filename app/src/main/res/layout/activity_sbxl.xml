<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:background="@android:color/white"
    android:focusableInTouchMode="true"
    tools:context="com.rdypda.view.activity.SbtlActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimary"
        app:title="设备下料"
        android:id="@+id/toolbar"></android.support.v7.widget.Toolbar>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:layout_marginRight="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:orientation="vertical">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:orientation="horizontal">
                           <TextView
                               android:id="@+id/sbbh_text"
                               android:layout_width="80dp"
                               android:layout_height="match_parent"
                               android:text="设备编号："
                               android:gravity="center_vertical|left"/>
                           <EditText
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:id="@+id/sbbh_ed"
                               android:textSize="15dp"
                               android:hint="请输入设备编号"/>
                           <com.rdypda.view.widget.PowerButton
                               android:layout_width="50dp"
                               android:layout_height="match_parent"
                               android:background="@color/color_green"
                               android:layout_marginTop="10dp"
                               android:layout_marginBottom="5dp"
                               android:textColor="@android:color/white"
                               android:id="@+id/sb_sure_btn"
                               android:text="确定"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:orientation="horizontal">
                           <TextView
                               android:layout_width="80dp"
                               android:layout_height="match_parent"
                               android:text="退料库位："
                               android:gravity="center_vertical|left"/>
                           <Spinner
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:id="@+id/xlkw"></Spinner>
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
               <HorizontalScrollView
                   android:layout_width="wrap_content"
                   android:layout_height="200dp">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:orientation="vertical">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:background="@color/colorPrimary"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="50dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="NO"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="150dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="物料编号"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="100dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="物料名称"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="100dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="总加料数"
                                   />
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="100dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="预计余数"
                                   />
                           </LinearLayout>
                       </LinearLayout>
                       <android.support.v7.widget.RecyclerView
                           android:layout_width="500dp"
                           android:scrollbars="vertical"
                           android:layout_height="match_parent"
                           android:id="@+id/tl_list"></android.support.v7.widget.RecyclerView>
                   </LinearLayout>
               </HorizontalScrollView>
               <HorizontalScrollView
                   android:layout_width="wrap_content"
                   android:layout_height="300dp">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:orientation="vertical">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:background="@color/colorPrimary"
                           android:orientation="horizontal">
                           <LinearLayout
                               android:layout_width="50dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="NO"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="120dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="条码编号"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="80dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="数量"/>
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="80dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="物料名称"
                                   />
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="150dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="加料时间"
                                   />
                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="100dp"
                               android:layout_height="match_parent"
                               android:background="@drawable/table"
                               android:orientation="vertical"
                               >
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:gravity="center_vertical"
                                   android:layout_gravity="center_horizontal"
                                   android:text="作业人员"
                                   />
                           </LinearLayout>
                       </LinearLayout>
                       <android.support.v7.widget.RecyclerView
                           android:layout_width="580dp"
                           android:scrollbars="vertical"
                           android:layout_height="match_parent"
                           android:id="@+id/scaned_list"></android.support.v7.widget.RecyclerView>
                   </LinearLayout>
               </HorizontalScrollView>
           </LinearLayout>
       </ScrollView>
       <android.support.design.widget.FloatingActionButton
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/hl_btn"
           android:layout_gravity="bottom|right"
           android:layout_marginRight="10dp"
           android:src="@drawable/xl"
           android:layout_marginBottom="10dp"/>
       <android.support.design.widget.FloatingActionButton
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/ql_btn"
           android:layout_gravity="bottom|right"
           android:src="@drawable/ql"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="80dp"/>
   </FrameLayout>
</LinearLayout>
