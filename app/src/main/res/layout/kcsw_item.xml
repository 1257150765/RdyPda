                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/lab_8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
